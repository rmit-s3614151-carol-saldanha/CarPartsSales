@model OAuthExample.Models.StoreInventory


@{
    ViewData["Title"] = "Edit";
}

<h1>Store Inventory Stock Request</h1>


<hr />


<h5>    @Html.DisplayNameFor(model => model.ProductID) </h5>
<h6>    @Html.DisplayFor(model => model.Product.ProductID)  </h6>
<h5>    @Html.DisplayNameFor(model => model.Product.Name) </h5>
<h6>    @Html.DisplayFor(model => model.Product.Name)  </h6>

<div class="row">
    <div class="col-md-4">
        <form asp-action="NewRequest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StoreID" />
            <input type="hidden" asp-for="Product.ProductID" />
            <div class="form-group">
                <label asp-for="StockLevel" class="control-label"></label>
                @Html.DropDownListFor(model => model.StockLevel, Enumerable.Range(1, 1).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }))
                <span asp-validation-for="StockLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

 <button type="button"  class="btn btn-default" onclick='window.location = "@Url.Action("NewInventory", "Franchise")";'>
                     <span class="glyphicon glyphicon-home"></span> Back to Home
                     </button>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    .btn-default {
    color: beige;
    background-color: teal;
    border-color: #ccc;
}


h1{
    color: #008080;
    text-align:center;
    } 
</style>
