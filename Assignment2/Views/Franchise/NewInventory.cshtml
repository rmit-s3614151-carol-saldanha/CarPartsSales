@model IEnumerable<Product>

@{
    ViewData["Title"] = "Store Inventory";
}

<h1>Store Inventory</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductID)
            </th>   
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
                <td>
     
            </td>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <th>
                <img src="@Url.Content(item.Image)" height="100" width="100" />
            </th>
       
            <td>
     
                    <button type="button"  class="btn btn-default" onclick='window.location = "@Url.Action("NewRequest", "Franchise" ,new { id = item.ProductID })";'>
                     <span class="glyphicon glyphicon-shopping-cart"></span> Purchase Stock
                     </button>               
            </td>
        </tr>
}
    </tbody>
</table>
 <button type="button"  class="btn btn-default" onclick='window.location = "@Url.Action("Sidebar", "Franchise")";'>
                     <span class="glyphicon glyphicon-home"></span> Back to Home
                     </button>

